@page
@model CS5800Proj.Pages.MatchingModel
@{
}


<div class="text-center">
    <form method="post">
        <h1 class="display-4">Manual Donor Matching</h1>
        <div class="mb-3">
            @Html.LabelFor(m => m.mod_id)
            @Html.DropDownListFor(m => m.mod_id, new SelectList(Model.names))
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.don_id)
            @Html.DropDownListFor(m => m.don_id, new SelectList(Model.donors))
        </div>
        <button type="submit" class="btn btn-outline-warning shadow bg-body rounded" style="max-width:8%">Confirm</button>
    </form>
</div>
