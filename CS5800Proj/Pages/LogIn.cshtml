@page
@model CS5800Proj.Pages.LogInModel
@{
    ViewData["Title"] = "User Log in Screen";
}

<div class="text-center">
    <h1 class="display-4">Please Log In</h1>
    <form method="post">
        <div class="mb-3">
            <label for="userIDInput" class="form-label">Enter User ID:</label>
            <input type="text" class="form-control text-center shadow bg-body rounded" id="userIDInput" name="userName" style="max-width:10%; margin-left:45%">
        </div>
        <div class="mb-3">
            <label for="pword">Password:</label>
            <input type="password" class="form-control text-center shadow bg-body rounded" id="pword" name="passWord" style="max-width:10%; margin-left:45%">
        </div>
        <button type="submit" class="btn btn-outline-warning shadow bg-body rounded" style="max-width:8%">Submit</button>
    </form>
    <br />
    <!-- Alert -->
    <div class="alert alert-warning alert-dismissible fade show" role="alert" style="max-width:60%; margin-left:20%">
        <strong>Reminder</strong> Username and Password are case sensitive. <a href="#" class="alert-link">Create new account</a>.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>


 