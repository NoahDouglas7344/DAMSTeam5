@page
@model CS5800Proj.Pages.ModifyModel
@{
    ViewData["Title"] = "Admin Modify a Donation Item";
}

<div class="text-center">
    <h1 class="display-4">Modify</h1>
    <form method="post">
        <div class="mb-3">
           @Html.LabelFor(m => m.mod_id)
           @Html.DropDownListFor(m => m.mod_id, new SelectList(Model.names))
        </div>
        <div class="mb-3">
           <label for="donation_item">Select Donation Catagory:</label>
           <select id="donation_item" name="donation_items">
               <option value="Material" selected>Material</option>
               <option value="Human Resources">Human Resoucres</option>
               <option value="Money">Money</option>
               <option value="Food/Drink">Food</option>
           </select>
        </div>
        <div class="mb-3">
           <label for="donor_location">Select Donation Location:</label>
          <input type="text" class="form-control text-center shadow bg-body rounded" required ="required" id="donor_location" name="donor_location" style="max-width:10%; margin-left:45%">
        </div>
        <div class="mb-3">
            <label for="amount" class="form-label">Input Amount:</label>
            <input type="number" class="form-control text-center shadow bg-body rounded" required = "required" min ="1" id="Amount" name="amount" style="max-width:10%; margin-left:45%">
        </div>
        <div class="mb-3">
           @Html.LabelFor(m => m.donation_request)
           @Html.DropDownListFor(m => m.donation_request, new SelectList(Model.IDs))
        </div>
        <button type="submit" class="btn btn-outline-warning shadow bg-body rounded" style="max-width:8%">Submit</button>
    </form>
    <br />
</div>
